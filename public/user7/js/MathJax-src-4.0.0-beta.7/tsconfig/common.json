{
  "compileOnSave": true,
  "compilerOptions": {
    "downlevelIteration": true,
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "lib": ["ES6", "DOM", "ES2020"],
    "noLib": false,
    "sourceMap": true,
    "typeRoots": []
  },
  "include": ["../ts/**/*"]
}
